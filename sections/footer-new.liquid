{% assign shop_linklist = linklists['shop'].links %}
{% assign about_linklist = linklists['about'].links %}
{% assign help_linklist = linklists['help'].links %}

<footer class="bg-bp-blue-light py-16">
  <div class="container">
    <div class="flex flex-wrap justify-between">
      <div class="w-full lg:w-1/4 mb-6 lg:mb-0">
        <div class="mb-6">
          <a class="block" href="{{ routes.root_url }}">
            {% render 'logo-boostpatches' %}
          </a>
        </div>
        <div class="mb-6">
          <span class="visually-hidden">{{ 'sections.footer.payment' | t }}</span>
          <ul class="grid grid-cols-5 gap-3" role="list">
            {%- for type in shop.enabled_payment_types -%}
              <li class="">
                {{ type | payment_type_svg_tag: class: 'icon icon--full-color' }}
              </li>
            {%- endfor -%}
          </ul>
        </div>
        <div class="flex items-center">
          <div class=""><p class="font-semibold m-0">Follow Us:</p></div>
          <ul class="flex items-center" role="list">
        
            <li class="px-3">
              <a href="{{ section.settings.social_facebook_link }}" target="_blank" class="link list-social__link" >
                {%- render 'icon-facebook' -%}
                <span class="visually-hidden">Facebook</span>
              </a>
            </li>
    
            <li class="px-3">
              <a href="{{ section.settings.social_instagram_link }}" target="_blank" class="link list-social__link" >
                {%- render 'icon-instagram' -%}
                <span class="visually-hidden">Instagram</span>
              </a>
            </li>
      
          </ul>
       </div>
      </div>
      <div class="w-full lg:w-2/3">
        <div class="flex flex-wrap -mx-6 md:mx-0">
          <div class="w-1/2 md:w-1/3 px-6 mb-6">
            <p class="font-semibold mb-3 text-lg">
              Shop
            </p>
            {% for link in shop_linklist %}
              <a
                class="mb-3 block font-semibold text-bp-teal-dark "
                href="{{ link.url }}"
              >
                {{- link.title -}}
              </a>
            {% endfor %}
          </div>
          
          <div class="w-1/2 md:w-1/3 px-6 mb-6">
            <p class="font-semibold mb-3 text-lg">
              About
            </p>
            {% for link in about_linklist %}
              <a
                class="mb-3 block font-semibold text-bp-teal-dark"
                href="{{ link.url }}"
              >
                {{- link.title -}}
              </a>
            {% endfor %}
          </div>

          <div class="w-1/2 md:w-1/3 px-6 mb-6">
            <p class="font-semibold mb-3 text-lg">
              Inquire
            </p>
            {% for link in help_linklist %}
              <a
                class="mb-3 block font-semibold text-bp-teal-dark"
                href="{{ link.url }}"
              >
                {{- link.title -}}
              </a>
            {% endfor %}
          </div>

        </div>
      
      </div>
    </div>
  </div>
</footer>



{% schema %}
{
  "name": "Footer",
  "settings": [
      {
        "type": "text",
        "id": "social_instagram_link",
        "label": "Instagram Link",
        "default": "https://www.instagram.com/boostpatches/"
      },
      {
        "type": "text",
        "id": "social_facebook_link",
        "label": "Facebook Link",
        "default": "https://www.facebook.com/profile.php?id=100089082062586"
      }
    ]
}
{% endschema %}