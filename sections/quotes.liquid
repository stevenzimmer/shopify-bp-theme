<section class="bg-bp-grey-1 py-20">
  <div class="container">
    <h2 class="text-center font-semibold text-3xl mb-6">{{ section.settings.heading }}</h2>
    <div class="main-reviews font-manrope" data-oke-carousel></div>
  </div>
</section>

<style>

  #shopify-section-{{ section.id }} .oke-w-review-footer,
  #shopify-section-{{ section.id }}  .oke-reviewCarousel-header,
  #shopify-section-{{ section.id }} .oke-reviewContent-date,
  .oke-w-reviewer-avatar,
  .oke-reviewCard-product,
  .oke-reviewContent-top,
  .oke-reviewContent-title.oke-title {
    display: none !important;
  }
  #shopify-section-{{ section.id }} .oke-prevNextButton-icon{
    width: 55px !important;
    height: 55px!important;
    border-radius: 100px;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  #shopify-section-{{ section.id }} .oke-reviewContent-body{
    font-weight: 400;
    font-size: 17px;
    line-height: 1.3;
  }
  #shopify-section-{{ section.id }} .oke-prevNextButton--prev{
    left: -60px;
  }
  #shopify-section-{{ section.id }} .oke-prevNextButton--next{
    right: -60px;
  }
  #shopify-section-{{ section.id }} .oke-prevNextButton--prev div:before{
   content: url(https://cdn.shopify.com/s/files/1/0667/4248/5269/files/chevron-right.svg?v=1707933448);
   margin-top: -5px;
   transform: rotate(180deg);
   transform-origin: center;
  }
  #shopify-section-{{ section.id }} .oke-prevNextButton--next div:before{
   content: url(https://cdn.shopify.com/s/files/1/0667/4248/5269/files/chevron-right.svg?v=1707933448);
   margin-top: -5px;
  }
 #shopify-section-{{ section.id }}  .oke-reviewCard{
   background: #FFFFFF;
    /* box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2); */
    border-radius: 16px;
    border: 0;
   padding: 30px;
 }
  #shopify-section-{{ section.id }} .oke-reviewCarousel-reviews-review{
    padding: 10px;
  }
  #shopify-section-{{ section.id }} .oke-w-reviewer-name {
    font-size: 16px;
    line-height: 21px;
    color: #625F6B;
    font-weight: 400;
  }
  #shopify-section-{{ section.id }} .oke-reviewContent-top{
    display: inline-block;
    margin-right: 15px;
  }
  #shopify-section-{{ section.id }} .oke-reviewContent-title{
    font-weight: 500;
    font-size: 18px;
    display: inline-block;
    width: auto;
   overflow: inherit;
  }
  #shopify-section-{{ section.id }} .oke-reviewCarousel-reviews{
    width: 100%;
  }

  .okeReviews[data-oke-container] .oke-reviewCard--below:not(.oke-reviewCard--hasContent) .oke-reviewCard-head, div.okeReviews .oke-reviewCard--below:not(.oke-reviewCard--hasContent) .oke-reviewCard-head {
    border:none;
    margin-top: 10px;
  }

  @media (max-width: 1024px){
    #shopify-section-{{ section.id }} .oke-prevNextButton{
      display: none;
    }
  }
  @media (max-width: 767px){
    #shopify-section-{{ section.id }} .reviews-con h3{
       font-size: 30px;
    }
  }
</style>




{% schema %}
{
  "name": "Home Reviews",
  "settings": [
     {
      "type": "text",
      "id": "heading",
      "label": "Add Section Title Here",
      "default": "Why People Love a Rejuvenation Transdermal Patch"
    }
  ],
  "presets": [
    {
      "name": "Home Reviews",
      "settings": {
        "heading": "Why People Love a Rejuvenation Transdermal Patch"
      }
    }
  ]
}
  {% endschema %}