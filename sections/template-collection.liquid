<div class="container relative">
  <div class="mb-12 flex flex-col-reverse flex-wrap items-center lg:flex-row">
    <div class="w-full lg:w-2/3">
      <h1 class="mb-3 text-4xl text-bp-teal-dark md:text-6xl">{{ section.settings.title }}</h1>
      <p class="text-lg font-semibold">
        {{ section.settings.paragraph }}
      </p>
    </div>
    <div class="mb-3 w-3/4 md:w-1/2  lg:mb-0 lg:w-1/3">
      {% if section.settings.texture %}
        {% render 'product-media', media: section.settings.texture %}

      {% else %}
        <img
          src="https://cdn.shopify.com/s/files/1/0667/4248/5269/files/collections-texture.png?v=1709085269"
          alt="{{ section.settings.title }} texutre"
          class="w-full"
        >
      {% endif %}
    </div>
  </div>
  <div class="grid grid-cols-1 gap-x-6 gap-y-12 pb-12 md:grid-cols-2 lg:grid-cols-3">
    {% for product in collection.products %}
      {% render "product-card" | product: product %}
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Collection",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Boost Wearable Patches"
    },
    {
      "type": "image_picker",
      "id": "texture",
      "label": "Texture"
    },
    {
      "type": "text",
      "id": "paragraph",
      "label": "Paragraph",
      "default": "Designed to Boost your energy, sleep, recovery, pain relief, immunity, calm and vibes."
    }
  ]
}
{% endschema %}
